@model RetroFootballShop.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Retro Football Shop";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<nav class="categories">
    <ul>
        @foreach (var category in Model.Leagues)
        {
            <li>
                <a href="@Url.Action("List", "Shop", new { categoryname = category.Name.ToLower().Replace(" ", "-") })">
                    @category.Name
                </a>
            </li>
        }
    </ul>
</nav>

<section class="new">
    <h3>Nowości</h3>
    <ul>
        @foreach (var itm in Model.NewArrivals)
        {
            <li>
                <a href="@Url.Action("Details", "Shop", new { id = itm.ProductId })">
                    <img src="~/Content/Images/@itm.ImgFileName" alt="">
                    <h1>@itm.ClubName (@itm.Year)</h1>
                </a>
            </li>
        }
    </ul>
</section>


