
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/main.css")" type="text/css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
          integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>

<body>
    <header>
        <div style="overflow: hidden;">
            @using (Html.BeginForm("SearchResult", "Shop", method: FormMethod.Get, htmlAttributes: new { style = "width: 200px; display: inline-block;" }))
            {
                <input type="text" id="searchbox" name="SearchString" placeholder="Wyszukaj klub..."/>
                <button type="submit" id="btnSearch">
                    <i class="fas fa-search"></i>
                </button>
            }

            <a class="cart-header" href="@Url.Action("Index", "Cart")">
                <i class="fas fa-shopping-basket"></i>
                KOSZYK (@Html.Action("GetCartItemsCount", "Cart"))
            </a>
        </div>

        <a href="@Url.Action("Index", "Home")" class="logo">
            <i class="fas fa-futbol"></i>
        </a>
    </header>

    @RenderBody()

    <footer>
        <nav>
            <ul>
                <li><a href="@Url.Action("StaticContent", new { viewname = "onas" })">O nas</a></li>
                <li><a href="@Url.Action("StaticContent", new { viewname = "kontakt" })" >Kontakt</a></li>
                <li><a href="@Url.Action("StaticContent", new { viewname = "wysylka" })">Wysyłka</a></li>
                <li><a href="@Url.Action("StaticContent", new { viewname = "regulamin" })">Regulamin</a></li>
            </ul>
        </nav>
        <div>
            <p>&copy; @DateTime.Now.Year Patryk Hermann</p>
        </div>
    </footer>

    @RenderSection("ScriptsBottom", required: false)

</body>

</html>
